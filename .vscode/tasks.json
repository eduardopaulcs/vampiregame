{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure Project",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset",
                "win-msvc"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Project",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "--preset",
                "build",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "dependsOn": "Configure Project"
        },
        {
            "label": "Build Clean Project",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "--preset",
                "build",
                "--config",
                "Debug",
                "--clean-first"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "dependsOn": "Configure Project"
        }
    ]
}